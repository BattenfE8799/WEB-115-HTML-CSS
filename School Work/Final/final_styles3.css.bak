@charset "utf-8";


/* HTML and Body styles 
body {
   background-color: black;
   box-shadow: rgb(51, 51, 51) 10px 0px 40px,  rgb(51, 51, 51) -10px 0px 40px;
   border-left: 1px solid rgb(153, 0, 153);
   border-right: 1px solid rgb(153, 0, 153);
   height: 100%;   
   margin: 0px auto;
   min-width: 320px;
   max-width: 1200px;   
   width: 100%;
}

/* Flex Layout Styles */
 
body {
    display: -webkit-flex;
    display: flex;
    -webkit-flex-flow: row wrap;
    flex-flow: row wrap;
}
 
#hole_list {
    flex-grow: 1;  
    flex-shrink: 3;
    flex-basis: 140px;
 
 
}
 
article {
    flex-grow: 3;
    flex-shrink: 1;
    flex-basis: 341px; 
    display: -webkit-flex;
    display: flex;
    -webkit-flex-flow: row wrap;
    flex-flow: row wrap;   
}
 
 
 
#stats  {
    flex-basis: 120px;
    flex-grow: 1;
    flex-shrink: 4;
}
 
#summary {
    flex-basis: 361px;
    flex-grow: 4;
    flex-shrink: 1;
}
 
aside {
    display: -webkit-flex;
    display: flex;
    -webkit-flex-flow: row wrap;
    flex-flow: row wrap;   
}  
 
aside > div {
    flex-basis: 180px;
    flex-grow: 1;
    flex-shrink: 1;
}  
   
 
 
/* =============================
    Mobile Styles: 0 - 480 pixels
   =============================
*/
@media only screen and (max-width:480px){
 
	nav#hole_list {
		-webkit-order: 99; 
		order:99;
	}
	footer {
		-webkit-order: 100;
		order:100;
	}  
	 
	nav.horizontal > ul {
		display:none;
	}
	 
	nav.horizontal:hover ul {
		display:block;
	}
	aside {
		display:none;
	}  
}
 
/* =================================================
    Tablet and Desktop Styles: 481 pixels and greater
   =================================================
*/
@media only screen and (min-width:481px){
 
	a#navicon {
		display:none;
	}  
	 
	nav.horizontal > ul {
		display: -webkit-flex;
		display: flex;
		-webkit-flex-flow: row;
		flex-flow: row;    
	}  
	nav.horizontal > ul > li {
		flex-basis:auto;
		flex-grow: 1;
		flex-shrink: 1;    
	   
	   
	   
	}
}